{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "server",
        "typings"
    ],
    "filesGlob": [
        "**/*.ts",
        "typings/main",
        "typings/index.d.ts"
    ]
}
